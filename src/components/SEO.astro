---
export interface Props {
  title: string;
  description: string;
  image?: string;
  article?: boolean;
  publishedTime?: string;
  modifiedTime?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
  title,
  description,
  image = '/og-image.svg',
  article = false,
  publishedTime,
  modifiedTime,
} = Astro.props;

const siteName = 'Behivest';
const fullTitle = `${title} | ${siteName}`;
const keywords =
  'đầu tư, tài chính cá nhân, quỹ mở, Fmarket, chứng khoán, tiết kiệm, lãi kép';
const author = 'Behivest Team';

// Construct full image URL with base path
const imageWithBase = image.startsWith('http')
  ? image
  : `${import.meta.env.BASE_URL}${image.replace(/^\//, '')}`;
const fullImageUrl = new URL(imageWithBase, Astro.site);
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />
<meta name="robots" content="index, follow" />
<meta name="language" content="Vietnamese" />
<meta name="theme-color" content="#F59300" />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={article ? 'article' : 'website'} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={`${siteName} - ${title}`} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="vi_VN" />
{
  article && publishedTime && (
    <meta property="article:published_time" content={publishedTime} />
  )
}
{
  article && modifiedTime && (
    <meta property="article:modified_time" content={modifiedTime} />
  )
}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={fullImageUrl} />

<!-- Favicon -->
<link
  rel="icon"
  type="image/svg+xml"
  href={`${import.meta.env.BASE_URL}favicon.svg`}
/>

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
  rel="stylesheet"
/>
